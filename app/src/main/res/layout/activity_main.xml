<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.relativelayout.MainActivity">

    <TextView
        android:id="@+id/txt_centro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stric"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"


        />
    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stri1"
        android:padding="10dp"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/txt_centro"
        android:layout_above="@+id/txt_centro"
        />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stri2"
        android:padding="10dp"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/txt_centro"

        />

    <TextView
        android:id="@+id/txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stri4"
        android:padding="10dp"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/txt_centro"
        android:layout_below="@+id/txt_centro"
        />
    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stri3"
        android:padding="10dp"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/txt_centro"
        />
</RelativeLayout>
